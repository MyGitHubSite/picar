<launch>
        <arg name="model" default="$(find car_model)/urdf/carModel.xacro" />
        <arg name="rvizconfig" default="$(find car_model)/rviz/urdf.rviz" />
        <arg name="publisher" default="$(find car_model)/src/car_publisher.py" />
        <arg name="gui" default="false" />


        <param name="robot_description" command="$(find xacro)/xacro.py $(arg model)" />
        <param name="source_list" value="$(arg publisher)"/>
        <param name="publish_default_positions" value="True" />
        <param name="use_gui" value="$(arg gui)" />


        <node name="robot_state" pkg="robot_state_publisher" type="robot_state_publisher">
        </node>
        <!--
        -->


        <node name="rviz" pkg="rviz" type="rviz" args="-d $(arg rvizconfig)" required="true"/>
</launch>
